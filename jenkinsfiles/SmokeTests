pipeline {
    agent any

    stages {
        stage('Clean') {
            steps {
                echo 'Deleting terget folder'
                mvn clean
            }
        }
        stage('Validate') {
            steps {
                echo 'Validating the project'
                mvn validate
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying'
                mvn compile
            }
        }
        stage('Run tests') {
            steps {
                echo 'Running tests'
            }
        }
    }
}