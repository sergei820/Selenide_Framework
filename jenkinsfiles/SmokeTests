pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building the project'
                mvn clean
                mvn validate
                mvn compile
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying'
            }
        }
        stage('Run tests') {
            steps {
                echo 'Running tests'
                mvn clean verify '-Denv=QA'
            }
        }
    }
}